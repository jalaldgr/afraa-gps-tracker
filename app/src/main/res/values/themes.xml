<resources>

    <!-- تم اصلی برای اپلیکیشن -->
    <style name="Theme.AfraaGPSTrackerTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- اینجا می‌توانید رنگ‌ها، فونت‌ها و سایر تنظیمات را سفارشی کنید -->
    </style>

    <!-- تم مخصوص برای صفحه Splash -->
    <style name="Theme.AfraaGPSTracker.Starting" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- تم بعد از صفحه Splash -->
        <item name="postSplashScreenTheme">@style/Theme.AfraaGPSTrackerTheme</item>
    </style>

</resources>
